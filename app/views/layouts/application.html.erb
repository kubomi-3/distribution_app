<!DOCTYPE html>
<html>
  <head>
    <title>DistributionApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h1 class="header_title"><%= link_to "Distribution", root_path, class: "header_link" %></h1>
      <% if user_signed_in? %>
        <div class="header_nav">
          <%= link_to "新規投稿", new_subject_path, class: "nav_link" %>
          <%= link_to "マイページ", user_path(current_user.id), class: "nav_link" %>
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "nav_link" %>
        </div>
      <% else %>
        <div class="header_nav">
          <%= link_to "ログイン", new_user_session_path, class: "nav_link" %>
          <%= link_to "新規登録", new_user_registration_path, class: "nav_link" %>
        </div>
      <% end %>
    </header>

    <%= yield %>
  </body>
</html>
